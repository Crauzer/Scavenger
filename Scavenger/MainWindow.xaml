    <MaterialDesign:DialogHost Identifier="MessageDialog" Name="MessageDialog">
        <MaterialDesign:DialogHost Identifier="RootDialog" Name="RootDialog">
            <Grid IsEnabled="{Binding IsGloballyEnabled, UpdateSourceTrigger=PropertyChanged}">
                <DockPanel>
                    <MaterialDesign:ColorZone DockPanel.Dock="Top" Margin="0,0,0,10" MaterialDesign:ShadowAssist.ShadowDepth="Depth3">
                        <Menu>
                            <MenuItem Header="File">
                                <MenuItem Header="Open BIN" Click="OnBinFileOpen">
                                    <MenuItem.Icon>
                                        <MaterialDesign:PackIcon Kind="FileCodeOutline"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Save BIN" Click="OnBinFileSave" IsEnabled="{Binding IsBinTreeSelected, UpdateSourceTrigger=PropertyChanged}">
                                    <MenuItem.Icon>
                                        <MaterialDesign:PackIcon Kind="ContentSave"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </MenuItem>
                        </Menu>
                    </MaterialDesign:ColorZone>
                    <Grid DockPanel.Dock="Bottom">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <MaterialDesign:ColorZone Grid.Row="0" MaterialDesign:ShadowAssist.ShadowDepth="Depth3" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <TextBox Text="{Binding SelectedBinTree.ObjectFilter, UpdateSourceTrigger=PropertyChanged}"
                                         MaterialDesign:HintAssist.Hint="Object Filter"
                                         MaterialDesign:HintAssist.IsFloating="True"
                                         Margin="10" MinWidth="500"/>
                            </StackPanel>
                        </MaterialDesign:ColorZone>
                        <MaterialDesign:ColorZone Grid.Row="1" MaterialDesign:ShadowAssist.ShadowDepth="Depth3" Margin="5">
                            <TabControl SelectedItem="{Binding SelectedBinTree, UpdateSourceTrigger=PropertyChanged}"
                                    ItemsSource="{Binding BinTrees, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignTabControl}">
                                <TabControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Border VerticalAlignment="Center">
                                                <TextBlock Text="{Binding BinName, UpdateSourceTrigger=PropertyChanged}"/>
                                            </Border>
                                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                                    Command="{Binding AddObjectCommand}"
                                                    Margin="10,0,0,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <Border VerticalAlignment="Center">
                                                        <MaterialDesign:PackIcon Kind="Add"/>
                                                    </Border>
                                                    <TextBlock Text="Add Object" Margin="5,0,0,0"/>
                                                </StackPanel>
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignIconButton}" Width="25" Height="25" Margin="5,0,0,0"
                                                    Click="OnBinTreeTabClose">
                                                <MaterialDesign:PackIcon Kind="Close" Width="15"/>
                                            </Button>
                                            <StackPanel.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Paste" Command="ApplicationCommands.Paste" CommandTarget="{Binding Path=PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                        <MenuItem.Icon>
                                                            <MaterialDesign:PackIcon Kind="ContentPaste"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                </ContextMenu>
                                            </StackPanel.ContextMenu>
                                        </StackPanel>
                                    </DataTemplate>
                                </TabControl.ItemTemplate>
                                <TabControl.ContentTemplate>
                                    <DataTemplate>
                                        <TreeView ItemsSource="{Binding Objects, UpdateSourceTrigger=PropertyChanged}"
                                                  VirtualizingStackPanel.IsVirtualizing="True"
                                                  MaterialDesign:RippleAssist.IsDisabled="True">
                                            <TreeView.ItemTemplate>
                                                <DataTemplate>
                                                    <MaterialDesign:ColorZone Mode="Dark" MaterialDesign:ShadowAssist.ShadowDepth="Depth4"
                                                                              MouseDoubleClick="OnBinTreeObjectDoubleClick">
                                                        <TreeViewItem ItemsSource="{Binding Children}" 
                                                                      ItemTemplateSelector="{StaticResource BinPropertyTemplateSelector}">
                                                            <TreeViewItem.Header>
                                                                <StackPanel Orientation="Vertical">
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBox Text="{Binding PropertyFilter, UpdateSourceTrigger=PropertyChanged}"
                                                                                 MaterialDesign:HintAssist.Hint="Property Filter"
                                                                                 MaterialDesign:HintAssist.IsFloating="True"
                                                                                 Margin="5" MinWidth="300"/>
                                                                        <TextBox Text="{Binding TextValueFilter, UpdateSourceTrigger=PropertyChanged}"
                                                                                 MaterialDesign:HintAssist.Hint="Text Value Filter"
                                                                                 MaterialDesign:HintAssist.IsFloating="True"
                                                                                 Margin="5" MinWidth="300"/>
                                                                    </StackPanel>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                                                 Style="{StaticResource MaterialDesignFilledTextBox}"
                                                                                 MinWidth="550"
                                                                                 Margin="10"
                                                                                 MaterialDesign:HintAssist.Hint="Name"/>
                                                                        <TextBox Text="{Binding MetaClass, UpdateSourceTrigger=PropertyChanged}"
                                                                                 Style="{StaticResource MaterialDesignFilledTextBox}"
                                                                                 MinWidth="250"
                                                                                 Margin="10"
                                                                                 MaterialDesign:HintAssist.Hint="Meta Class"/>
                                                                        <MaterialDesign:Chip Margin="10,0,0,0" ToolTip="Lint Status">
                                                                            <Border VerticalAlignment="Center">
                                                                                <MaterialDesign:PackIcon>
                                                                                    <MaterialDesign:PackIcon.Style>
                                                                                        <Style TargetType="MaterialDesign:PackIcon">
                                                                                            <Style.Triggers>
                                                                                                <DataTrigger Binding="{Binding LintStatus}" Value="{x:Static ViewModels:LintStatus.Warning}">
                                                                                                    <Setter Property="Kind" Value="AlertCircleOutline"/>
                                                                                                </DataTrigger>
                                                                                                <DataTrigger Binding="{Binding LintStatus}" Value="{x:Static ViewModels:LintStatus.Valid}">
                                                                                                    <Setter Property="Kind" Value="Check"/>
                                                                                                </DataTrigger>
                                                                                            </Style.Triggers>
                                                                                        </Style>
                                                                                    </MaterialDesign:PackIcon.Style>
                                                                                </MaterialDesign:PackIcon>
                                                                            </Border>
                                                                        </MaterialDesign:Chip>
                                                                        <MaterialDesign:Chip Content="Object" Margin="15"/>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </TreeViewItem.Header>
                                                        </TreeViewItem>
                                                        <MaterialDesign:ColorZone.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="Add Object Item" Click="OnBinTreeObjectAddItem">
                                                                    <MenuItem.Icon>
                                                                        <MaterialDesign:PackIcon Kind="Plus"/>
                                                                    </MenuItem.Icon>
                                                                </MenuItem>
                                                                <MenuItem Header="Delete Object" Click="OnBinTreeObjectDelete">
                                                                    <MenuItem.Icon>
                                                                        <MaterialDesign:PackIcon Kind="Remove"/>
                                                                    </MenuItem.Icon>
                                                                </MenuItem>
                                                                <Separator/>
                                                                <MenuItem Header="Copy" Command="ApplicationCommands.Copy" CommandTarget="{Binding Path=PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                                    <MenuItem.Icon>
                                                                        <MaterialDesign:PackIcon Kind="ContentCopy"/>
                                                                    </MenuItem.Icon>
                                                                </MenuItem>
                                                                <MenuItem Header="Paste" Command="ApplicationCommands.Paste" CommandTarget="{Binding Path=PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                                    <MenuItem.Icon>
                                                                        <MaterialDesign:PackIcon Kind="ContentPaste"/>
                                                                    </MenuItem.Icon>
                                                                </MenuItem>
                                                            </ContextMenu>
                                                        </MaterialDesign:ColorZone.ContextMenu>
                                                    </MaterialDesign:ColorZone>
                                                </DataTemplate>
                                            </TreeView.ItemTemplate>
                                            <TreeView.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Paste" Command="ApplicationCommands.Paste" CommandTarget="{Binding Path=PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                        <MenuItem.Icon>
                                                            <MaterialDesign:PackIcon Kind="ContentPaste"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                </ContextMenu>
                                            </TreeView.ContextMenu>
                                        </TreeView>
                                    </DataTemplate>
                                </TabControl.ContentTemplate>
                            </TabControl>
                        </MaterialDesign:ColorZone>
                        <MaterialDesign:ColorZone Grid.Row="2" MaterialDesign:ShadowAssist.ShadowDepth="Depth3" Margin="15">
                            <Grid DataContext="{Binding Infobar}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <DockPanel Grid.Row="0">
                                    <TextBlock DockPanel.Dock="Left"
                                               Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}" Margin="10,10,0,5"/>
                                    <Image DockPanel.Dock="Right" Source="Resources/icon.ico" Width="48" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                                </DockPanel>
                                <ProgressBar Grid.Row="1" 
                                 Value="{Binding Progress, UpdateSourceTrigger=PropertyChanged}"
                                 IsIndeterminate="{Binding IsProgressIndefinite, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                        </MaterialDesign:ColorZone>
                    </Grid>
                </DockPanel>
            </Grid>
        </MaterialDesign:DialogHost>
    </MaterialDesign:DialogHost>
</MaterialDesignExtensions:MaterialWindow>
