                            <MenuItem.Icon>
                                <MaterialDesign:PackIcon Kind="ContentPaste"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </MaterialDesign:ColorZone.ContextMenu>
            </MaterialDesign:ColorZone>
        </DataTemplate>
