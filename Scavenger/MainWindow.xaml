                                            <DataTrigger Binding="{Binding LintStatus}" Value="{x:Static ViewModels:LintStatus.Valid}">
                                                <Setter Property="Kind" Value="Check"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
