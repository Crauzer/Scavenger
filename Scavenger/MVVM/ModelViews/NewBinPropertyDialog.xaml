<ui:ContentDialog
    xmlns:ui="http://schemas.modernwpf.com/2019"
    x:Class="Scavenger.MVVM.ModelViews.NewBinPropertyDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Scavenger.MVVM.ModelViews"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    CloseButtonText="Cancel"
    PrimaryButtonText="Create">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0"/>
        <ComboBox Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                  SelectedValue="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                  ItemsSource="{Binding Types, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</ui:ContentDialog>
