<UserControl x:Class="Scavenger.MVVM.ModelViews.PrimitiveStructures.ValueColorEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scavenger.MVVM.ModelViews.PrimitiveStructures" 
             xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <local:ColorEditor Color="{Binding Color.ConstantValue, RelativeSource={RelativeSource AncestorType=UserControl}}"  Margin="15"/>
            <Button Content="{MaterialDesign:PackIcon Kind=Timer, Size=21}"
                    Margin="15,0,0,0" 
                    Command="{x:Static MaterialDesign:DialogHost.OpenDialogCommand}"
                    CommandParameter="{Binding Color.Dynamics, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</UserControl>
